[core]
	excludesfile = ~/.gitignore_global

[color]
	ui = auto

[alias]
	lg = log --graph --oneline --decorate
	st = status
	info = log -1 --stat
	todo = !git ls-files | xargs grep --color=auto -i todo

[diff]
	renames = copies # Figure out copies as well as renames for dedup
[push]
	default = simple #@@@ Use the new default, and suppress deprecation warnings. Read git-config push.default...
